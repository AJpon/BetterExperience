<UserControl x:Class="BetterGFE.SysTray"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:tb="http://www.hardcodet.net/taskbar" Height="0" Width="0">
    <UserControl.Resources>
        <ContextMenu x:Key="SysTrayMenu">
            <MenuItem Header="Settings" Click="ShowSettings"/>
            <Separator/>
            <MenuItem Header="Exit" Click="Exit"/>
        </ContextMenu>
    </UserControl.Resources>
    <tb:TaskbarIcon x:Name="NotifyIcon"
                    IconSource="\Resources\Icon.ico"
                    Visibility="Visible"
                    ToolTipText="Better Experience"
                    MenuActivation="LeftOrRightClick"
                    PopupActivation="DoubleClick"
                    ContextMenu="{StaticResource SysTrayMenu}"
                    />
</UserControl>
